<main class="container-fluid">
        <form action="">
            <h2>Sign Up Below</h2>
            <div class="row mb-3">
                <label for="inputNewUsername" class="col-sm-4 col-form-label form-labels">Username</label>
                <div class="col-sm-8">
                <input type="text" class="form-control" id="inputNewUsername">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputNewPassword" class="col-sm-4 col-form-label form-labels">Password</label>
                <div class="col-sm-8">
                <input type="password" class="form-control" id="inputNewPassword">
                 </div>
            </div>
             <div class="row mb-3">
                <label for="confirmNewPassword" class="col-sm-4 col-form-label form-labels">Confirm Password</label>
               
                <div class="col-sm-8">
                <input type="password" class="form-control" id="confirmNewPassword">
                
                </div>
                <div class="col-sm-4"></div>
                <div class="col-sm-8 d-flex p-2">
                <p class="p-2 col-sm-6" id="check-pw">Your passwords don't match!</p>
                <p class="p-2 col-sm-6" id="togglePassword">Show Password</p>
                </div>
            </div>
            <button class="form-button" type="submit" id="signup-btn"> Sign Up!</button>
        </form>
</main>
<script src="/js/signup.js"></script>